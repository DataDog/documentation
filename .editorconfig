root = true

[*]
end_of_line = lf  # unix-style EOL
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[layouts/partials/img.html]
insert_final_newline = false

[Makefile]
indent_style = tab
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 119

[*.ts]
indent_size = 2
{
  "name": "cdocs-core",
  "version": "1.0.0",
  "description": "Types and utilities for configuring, validating, and building customizable documentation",
  "main": "dist/index.js",
  "scripts": {
    "test": "yarn build; vitest run --coverage --reporter=verbose",
    "test:watch": "yarn build; vitest",
    "build": "rimraf ./dist && npx tsc",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">= 20.11.0"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 90,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "rimraf": "^5.0.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "@vitest/coverage-v8": "^2.0.2",
    "depcheck": "^1.4.7",
    "typescript": "^5.4.3",
    "vitest": "^2.0.2"
  }
}

{
    "name": "cdocs-hugo-integration",
    "version": "1.0.0",
    "description": "A preprocessor that converts dynamic Markdoc content into static (but customizable) Hugo content",
    "scripts": {
        "provide-browser-bundle-to-vitest": "cp -r ./dist/clientBundle ./src",
        "posttest": "rimraf ./src/clientBundle",
        "test": "yarn build; yarn provide-browser-bundle-to-vitest; vitest run --coverage --reporter=verbose",
        "test:watch": "yarn build; vitest",
        "build-markdoc-integration": "rimraf ./dist && npx tsc; yarn copy-styles",
        "build-prod-renderer": "yarn esbuild ./dist/siteAssetBuilding/browserEntryPoint.js --metafile=esbuild-meta-prod.json --tree-shaking=true --bundle --minify --outfile='./dist/clientBundle/clientFiltersManager.min.js'",
        "build-dev-renderer": "yarn esbuild ./dist/siteAssetBuilding/browserEntryPoint.js --metafile=esbuild-meta-dev.json --tree-shaking=true --bundle --outfile='./dist/clientBundle/clientFiltersManager.js'",
        "build": "yarn build-markdoc-integration && yarn build-dev-renderer && yarn build-prod-renderer && yarn copy-styles && yarn copy-html",
        "copy-styles": "cp ./src/siteAssetBuilding/styles.css ./dist/siteAssetBuilding",
        "copy-html": "mkdir ./dist/authorConsole && cp ./src/authorConsole/index.html ./dist/authorConsole"
    },
    "engines": {
        "node": ">= 20.11.0"
    },
    "dependencies": {
        "@types/markdown-it": "^14.1.2",
        "@vitejs/plugin-react": "^4.3.3",
        "cdocs-data": "https://s3.amazonaws.com/origin-static-assets/corp-node-packages/master/cdocs-data-v1.0.2.tgz",
        "cdocs-markdoc": "https://s3.amazonaws.com/origin-static-assets/corp-node-packages/master/cdocs-markdoc-v1.0.1.tgz",
        "chroma-highlight": "^2.4.2",
        "interweave": "^13.1.0",
        "js-yaml": "^4.1.0",
        "lit": "^3.1.4",
        "markdown-it": "12.3.2",
        "markdown-it-deflist": "^3.0.0",
        "md5": "^2.3.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "rimraf": "^5.0.5",
        "rollup": "^4.19.1",
        "stringcase": "^4.3.1",
        "uuid": "^10.0.0",
        "vite": "^5.4.10",
        "vite-plugin-singlefile": "^2.0.2",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/lodash": "^4.17.7",
        "@types/md5": "^2.3.5",
        "@types/node": "^20.11.30",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/uuid": "^10.0.0",
        "@vitest/coverage-v8": "^2.0.2",
        "esbuild": "0.20.2",
        "typescript": "^5.4.3",
        "vitest": "^2.0.2"
    }
}

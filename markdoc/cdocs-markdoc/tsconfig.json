{
  "compilerOptions": {
    "strict": true,
    "target": "ES2021",
    "lib": ["ES2021"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["dist", "spec", "**/*.test.ts", "node_modules"]
}
